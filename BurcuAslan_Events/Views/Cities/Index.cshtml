@model IEnumerable<BurcuAslan_Events.Models.Cities>

@{
    ViewBag.Title = "Index";
}

<h2>Şehirler Listesi</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Şehir Adı:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City_name)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.City_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.City_id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.City_id })
            </td>
        </tr>
    }
    <div>
        @Html.ActionLink("Ketgori ve Şehir Listesine geri dön", "Index","Event_categories")
    </div>
</table>
